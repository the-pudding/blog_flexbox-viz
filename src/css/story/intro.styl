.intro
	margin 0 auto
	padding 4rem 1rem 1.5rem 1rem

	&-bg
		background-image url('assets/images/intro-bg.png')
		background-size auto 100%
		border-bottom 1px solid $off-black
		margin-bottom 4rem
		//background-image url('assets/images/hist.png')

	&-text
		max-width 35rem
		margin 0 auto
		background-color rgba($white, 0.85)
		padding 0.5rem



	&__hed
		// max-width 35rem
		// margin 0 auto
		padding-top 3rem
		font-weight 400
		text-align left
		background-color: $white
		set-type-size('xx-large', true)
		+mq('bp-3')
			set-type-size('xxx-large', true)
		+mq('bp-5')
			set-type-size('xxx-large', true)

	&__dek
		// max-width $column-width
		// margin 0 auto
		padding-top 1rem
		text-align left
		set-type-size('medium', true)
		//background-color: $white
	&-by-date
		display flex
		flex-direction row
		align-items: baseline;
		justify-content: space-between;
		.intro__date
			set-type-size('small', true)

		.intro__byline
			// max-width $column-width
			// margin 0 auto
			padding-top 1rem
			padding-bottom 1.5rem
			text-align left
			set-type-size('small', true)
			//background-color: $white
